{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}